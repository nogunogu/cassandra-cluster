#!/bin/bash

usage () {
  CMDNAME=`basename $0`
  echo "Usage: $CMDNAME (start|stop)" 1>&2
}

if [ $# -ne 1 ]; then
  usage
  exit 1
fi

stop () {
  PID=`ps aux | grep CassandraDaemon | grep -v grep | awk '{ print $2 }'`
  if [ "$PID" = "" ]; then
    echo "Cassandra is not running..."
  else
    echo "Stop Cassandra (pid=$PID)..."
    sudo kill $PID
  fi
}

start () {
  sudo <%= @bin_dir %>/cassandra
}

case $1 in
  "stop" ) stop ;;
  "start" ) start ;;
  * ) usage
      exit 1 ;;
esac

exit 0
