graphite:
-
  period: 30
  timeunit: 'SECONDS'
  prefix: '<%= @prefix %>.cassandra'
  hosts:
   - host: '<%= @graphite_server %>'
     port: 2003
  predicate:
    color: 'white'
    useQualifiedName: true
    patterns:
      - '^jvm.gc.*'
      - '^jvm.memory.*'
      - '^org.apache.cassandra.metrics.DroppedMessages.+'
      - '^org.apache.cassandra.metrics.ClientRequest.Failures.+'
      - '^org.apache.cassandra.metrics.ClientRequest.Latency.Read.count'
      - '^org.apache.cassandra.metrics.ClientRequest.Latency.Write.count'

